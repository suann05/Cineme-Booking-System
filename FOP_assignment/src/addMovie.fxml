<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #FFF8F5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="addmovieController">
   <children>
      <TextField fx:id="nameTextField" layoutX="209.0" layoutY="159.0" promptText="Movie Name">
         <font>
            <Font name="Comic Sans MS" size="13.0" />
         </font>
      </TextField>
      <Label layoutX="271.0" layoutY="94.0" text="Movie" textFill="#193a6f">
         <font>
            <Font name="Comic Sans MS" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="dateTextField" layoutX="210.0" layoutY="234.0" promptText="Date(1/1/2022)">
         <font>
            <Font name="Comic Sans MS" size="13.0" />
         </font>
      </TextField>
      <TextField fx:id="timeTextField" layoutX="210.0" layoutY="310.0" promptText="Time(12:00)">
         <font>
            <Font name="Comic Sans MS" size="13.0" />
         </font>
      </TextField>
      <Button fx:id="backButton" layoutX="11.0" layoutY="10.0" mnemonicParsing="false" onAction="#backButton" style="-fx-background-color: transparent;" text="&lt; Back" textFill="#f98125">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </Button>
      <Button fx:id="addButton" layoutX="243.0" layoutY="418.0" mnemonicParsing="false" onAction="#addButton" style="-fx-background-color: #193A6F;" text="Add" textFill="#f98125">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </Button>
      <Button fx:id="removeButton" layoutX="310.0" layoutY="418.0" mnemonicParsing="false" onAction="#removeButton" style="-fx-background-color: #193A6F;" text="Remove" textFill="#f98125">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
