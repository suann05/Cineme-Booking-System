<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #FFF8F5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="loginController">
   <children>
      <Label alignment="CENTER" layoutX="294.0" layoutY="103.0" prefHeight="54.0" prefWidth="110.0" text="Sign In" textFill="#193a6f">
         <font>
            <Font name="Comic Sans MS Bold" size="30.0" />
         </font>
      </Label>
      <Label layoutX="200.0" layoutY="388.0" text="Don't have an account?" textFill="#193a6f">
         <font>
            <Font name="Comic Sans MS" size="12.0" />
         </font>
      </Label>
      <Button fx:id="signinButton" layoutX="399.0" layoutY="314.0" mnemonicParsing="false" onAction="#signinButtonOnAction" prefHeight="32.0" prefWidth="62.0" style="-fx-background-color: #193A6F;" text="Login" textFill="#f98125">
         <font>
            <Font name="Comic Sans MS" size="15.0" />
         </font>
      </Button>
