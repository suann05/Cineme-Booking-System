            <Font name="Comic Sans MS" size="13.0" />
         </font>
      </TextField>
      <PasswordField fx:id="passwordTextField" layoutX="294.0" layoutY="242.0" prefHeight="35.0" prefWidth="268.0" promptText="Password" style="-fx-border-color: #2B5A9E; -fx-border-width: 2px;">
         <font>
            <Font name="Comic Sans MS" size="13.0" />
         </font>
      </PasswordField>
      <Circle fill="DODGERBLUE" layoutX="148.0" layoutY="208.0" radius="100.0" stroke="#193a6f" strokeType="INSIDE" strokeWidth="3.0" style="-fx-fill: transparent;" />
      <ImageView fx:id="popcornIcon" fitHeight="193.0" fitWidth="187.0" layoutX="55.0" layoutY="115.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@popcornIcon.png" />
         </image></ImageView>
   </children>
